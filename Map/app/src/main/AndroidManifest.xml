<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atravesar.xoera.xoeracustomer.activity">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.MapsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.GetAddressActivity"
            android:label="@string/title_activity_get_address"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.MapsActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.BookingActivity"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.MapsActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.BookingActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.LoginActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.PaymentActivity"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.BookingActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.BookingSaved"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.BookingActivity" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.CurrentBookingActivity"
            android:label="Current Booking"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.BookingSaved" />
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.BookingHistoryActivity"
            android:label="Bookings"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.MapsActivity" />
        <activity android:name="com.atravesar.xoera.xoeracustomer.activity.ProfileActivity"
            android:label="Profile"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.MapsActivity"></activity>
        <activity
            android:name="com.atravesar.xoera.xoeracustomer.activity.GetHomeAddressActivity"
            android:parentActivityName="com.atravesar.xoera.xoeracustomer.activity.GetAddressActivity"></activity>
    </application>

</manifest>
